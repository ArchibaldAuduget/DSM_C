{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/authAndReg.css') }}">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm, ) }}
    <div class="row">
        <div class="col-md-6 auth-form">
            {{ form_row(registrationForm.email, {
                label: 'Adresse email :',
                'attr': {'placeholder': 'Votre adresse email'}
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe :'
            }) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.phoneNumber) }}
        </div>
        <div class="col-md-6">
            {{ form_row(registrationForm.country) }}
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.postalCode) }}
            {{ form_row(registrationForm.city) }}
        </div>
    </div>

    <div class="agree">
        <button type="submit" class="auth-button"><strong>S'inscrire</strong></button>
        <div class="auth-trait mb-3"></div>
        <p>DÃ©ja inscrit ? </p>
        <a class="auth-link" href="{{ path('app_login') }}">Connectez-vous !</a>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
