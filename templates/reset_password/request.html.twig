{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="mb-4">Réinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="mb-2">
                Entrez votre adresse email ici, et nous vous enverrons un lien par email afin que vous puissiez changer votre mot de passe.
        </div>

        <button class="btn btn-primary">Envoyer la réinitialisation par mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
